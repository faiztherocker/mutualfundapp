{
    "exclude": [
        "./client/**"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "target": "es5",
        "preserveConstEnums": true,
        "module": "es6",
        "lib": [
            "es5",
            "es2015",
            "es6",
            "dom"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    }
}